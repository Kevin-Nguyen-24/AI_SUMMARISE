# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gpt-oss:20b
OLLAMA_TIMEOUT=120

# Server Configuration
MAX_FILE_SIZE_MB=20
ALLOWED_EXTENSIONS=["pdf","docx","txt","xlsx","xls"]

# Chunking Configuration
CHUNK_SIZE=3000
CHUNK_OVERLAP=300

# Summarization Style Configuration
# Temperature: 0.0-1.0 (Higher = more creative/human-like, Lower = more factual/precise)
SUMMARY_TEMPERATURE=0.7
# Style: conversational, formal, casual
SUMMARY_STYLE=conversational

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=./data/chromadb
CHROMA_COLLECTION_NAME=customers
EMBEDDING_MODEL=all-MiniLM-L6-v2

# RAG Configuration
RAG_TOP_K=5
RAG_TEMPERATURE=0.7

# API Configuration (Optional)
API_KEY=

# Logging
LOG_LEVEL=INFO
